<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Велоринок України</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_pulse.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="favicon.ico" width="30" height="30" class="d-inline-block align-top" alt="">
                        VeloLab
                    </a>
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="BicycleModels" asp-action="Index">Моделі</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Categories" asp-action="Index">Категорії</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Brands" asp-action="Index">Бренди</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="AuthorizedDealers" asp-action="Index">Представники</a>
                        </li>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Dropdown link
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Bicycles" asp-action="Index">Велосипеди</a>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Colors" asp-action="Index">Кольори</a>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Sizes" asp-action="Index">Розміри</a>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Countries" asp-action="Index">Країни</a>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Genders" asp-action="Index">Для кого</a>
                                    <a class="nav-link text-light" asp-area="" asp-controller="SizeColorModels" asp-action="Index">Розмір-Колір-Модель</a>

                                </div>
                            </li>
                        }
                    </ul>
                    <div class="my-2 my-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <p>@User.Identity.Name</p>

                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <input type="submit" value="Вихід" />
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login">Вхід</a>
                            <a asp-controller="Account" asp-action="Register">Реєстація</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - DbBicyclesLab - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
