@model IEnumerable<DbBicyclesLab.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<style>
    .catalog-grid {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        list-style:none;
    }
    .content_type_catalog {
        width: 100%;
        display: block;
        list-style: none;
    }
    .catalog-grid__cell {
        position: relative;
        width: 33%;
        border-right: 1px solid #e9e9e9;
        border-bottom: 1px solid #e9e9e9;
        box-sizing: border-box;
    }
    .goods-tile {
        position: relative;
        width: 100%;
        overflow: hidden;
    }
    .goods-tile:hover {
        opacity:0.7;
    }
</style>

<h1>Бренди</h1>

<div class="container">
    <div class="row">
        <div class="col-12">
            <section class="content_type_catalog">
                <ul class="catalog-grid">
                    @foreach (var item in Model)
                    {
                        if (item.Image != null)
                        {
                            <li class="catalog-grid__cell">
                                <div class="goods-tile">
                                    <a asp-action="CommonDetails" asp-route-id="@item.Id" class="brand-tile">
                                        <img style="width:100%; height:auto; text-align:center;" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                                    </a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="catalog-grid__cell">
                                <div class="goods-tile">
                                    <a asp-action="CommonDetails" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.BrandName)
                                    </a>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </section>
        </div>
    </div>
</div>