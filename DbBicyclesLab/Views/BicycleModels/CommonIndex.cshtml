@model IEnumerable<DbBicyclesLab.Models.BicycleModel>

    @{
        ViewData["Title"] = "Index";
    }

    <style>
        .catalog-grid {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            list-style:none;
        }
        .content_type_catalog {
            width: 100%;
            display: block;
            list-style: none;
        }
        .catalog-grid__cell {
            position: relative;
            width: 33%;
            border-right: 1px solid #e9e9e9;
            border-bottom: 1px solid #e9e9e9;
            box-sizing: border-box;
        }
        .goods-tile {
            position: relative;
            width: 100%;
            overflow: hidden;
        }
        .goods-tile:hover {
            opacity:0.7;
        }
    </style>

    <h1>Моделі велосипедів</h1>

    <section class="content_type_catalog">
        <ul class="catalog-grid">
            @foreach (var item in Model)
            {
                if (item.Image != null)
                {
                    <li class="catalog-grid__cell" style="background-color:white;">
                        <div class="goods-tile" background-color:white;>
                            <a asp-action="CommonDetails" asp-route-id="@item.Id" class="brand-tile">
                               <img style="width:100%; height:auto; text-align:center;" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                            </a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="catalog-grid__cell" style="background-color:white;">
                        <div class="goods-tile" background-color:white;>
                            <a asp-action="CommonDetails" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.ModelName)
                            </a>
                        </div>
                    </li>
                }
            }
        </ul>
    </section>