<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Images/citybike.jpg" alt="First slide">
            <div class="carousel-caption">
                <a class="nav-link text-light" asp-area="" asp-controller="BicycleModels" asp-action="CommonIndex">
                    <h1>Моделі</h1>
                </a>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/Images/citybike.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <a class="nav-link text-light" asp-area="" asp-controller="Brands" asp-action="CommonIndex">
                    <h1>Бренди</h1>
                </a>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

